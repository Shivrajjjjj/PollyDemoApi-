@page
@model PollyDemoApi.Pages.IndexModel
@{
    ViewData["Title"] = "Data Entry Dashboard";
}

<!-- Page Header -->
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">📋 Data Entry Dashboard</h1>
        <span class="text-muted">Welcome! Manage your entries efficiently</span>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded shadow-sm mb-4">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-page="/Index">Polly App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/PollyStatus">Polly Status</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AddTestItem">Add Test Item</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AddApiRequest">API Request</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AddExternalCall">External Call</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AddLogEntry">Log Entry</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-page="/AddRetryLog">Retry Log</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Dashboard Cards -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-primary h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><i class="bi bi-person-plus-fill"></i> Add Test Item</h5>
                        <p class="card-text">Quickly add new test items to the database.</p>
                    </div>
                    <a asp-page="/AddTestItem" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-success h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><i class="bi bi-file-earmark-text"></i> Log API Request</h5>
                        <p class="card-text">Record external API requests for monitoring and retries.</p>
                    </div>
                    <a asp-page="/AddApiRequest" class="btn btn-success mt-3">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-warning h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><i class="bi bi-arrow-repeat"></i> Log Retry</h5>
                        <p class="card-text">Track retry attempts for resilient operations.</p>
                    </div>
                    <a asp-page="/AddRetryLog" class="btn btn-warning mt-3 text-white">Go</a>
                </div>
            </div>
        </div>

        <!-- More Cards -->
        <div class="col-md-4">
            <div class="card shadow-sm border-info h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><i class="bi bi-box-seam"></i> External Service Call</h5>
                        <p class="card-text">Log external service interactions.</p>
                    </div>
                    <a asp-page="/AddExternalCall" class="btn btn-info mt-3 text-white">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-secondary h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><i class="bi bi-journal-text"></i> Log Entry</h5>
                        <p class="card-text">Add custom log entries for auditing.</p>
                    </div>
                    <a asp-page="/AddLogEntry" class="btn btn-secondary mt-3 text-white">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-dark h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><i class="bi bi-graph-up"></i> Polly Status</h5>
                        <p class="card-text">Check the status of Polly policies and retries.</p>
                    </div>
                    <a asp-page="/PollyStatus" class="btn btn-dark mt-3 text-white">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
