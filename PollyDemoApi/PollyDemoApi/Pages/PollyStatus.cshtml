@page
@model PollyStatusModel
@{
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container my-5">
    <!-- Header -->
    <header class="text-center mb-4">
        <h2 class="fw-bold text-primary">Polly Configuration Dashboard</h2>
        <p class="text-muted">Monitor and test Polly resilience policies</p>
    </header>

    <!-- Polly Config -->
    <section class="mb-5">
        <h4 class="mb-3">Polly Settings</h4>
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Retry Count</th>
                    <td>@Model.RetryCount</td>
                </tr>
                <tr>
                    <th>Retry Base Delay (ms)</th>
                    <td>@Model.RetryBaseDelayMs</td>
                </tr>
                <tr>
                    <th>Circuit Breaker Allowed Failures</th>
                    <td>@Model.CircuitBreakerAllowedFailures</td>
                </tr>
                <tr>
                    <th>Circuit Breaker Break Seconds</th>
                    <td>@Model.CircuitBreakerBreakSeconds</td>
                </tr>
                <tr>
                    <th>Timeout Seconds</th>
                    <td>@Model.TimeoutSeconds</td>
                </tr>
            </tbody>
        </table>
    </section>

    <!-- API Test -->
    <section class="mb-5">
        <h4 class="mb-3">Test Weather API</h4>
        <form method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success">Call /api/weather/getdata</button>
        </form>
    </section>

    <!-- API Response -->
    @if (Model.ApiResponse != null)
    {
    <section>
        <h4 class="mb-3">API Response</h4>
        <div class="border rounded bg-light p-3">
            <pre class="mb-0" style="white-space: pre-wrap; word-break: break-word;">@Model.ApiResponse</pre>
        </div>
    </section>
    }
</div>